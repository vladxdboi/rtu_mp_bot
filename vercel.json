{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "backend/api/webhook.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/webhook", "dest": "/backend/api/webhook.js" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
